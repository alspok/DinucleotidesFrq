@model DinucleotidesFrq.Models.MultipleModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
    <head>
        <title>DinucCalc</title>
    </head>
    <body>
        <div class="container-fluid" style="overflow-y: scroll">
            <div class="row justify-content-center">
                <h2>Dinucleotides frq calculation</h2>
            </div>
            
            <div class="row justify-content-center">
                <table>
                    <tbody>
                        <tr>
                            <td style="width: 140px"><b>Sequence</b></td>
                            <td style="word-break: break-all">@Model.Seq.Seq</td>
                        </tr>
                        <tr>
                            <td style="width: 140px"><b>Sequence length</b></td>
                            <td>@Model.Seq.Seq.Length</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <br>
            <div class="row justify-content-center">
                <table>
                    <thead>
                        <tr>
                            <th>Dinuc</th>
                                @foreach(var item in Model.Dinuc.dinucleotides)
                                    {<th>@item.Dinuc</th>}
                        </tr>
                    </thead>    
                    <tbody>
                        <tr>
                            <td style="width: 140px">1st frame</td>
                            @foreach(var item in Model.Dinuc.dinucleotides)
                                    {
                                        <td>@item.Dinuc1stFrame</td>
                                    }
                        </tr>
                        <tr>
                            <td style="width: 140px">1st frame frq</td>
                            @foreach(var item in Model.Dinuc.dinucleotides)
                                    {
                                        <td>@item.Dinuc1stFrameFrq.ToString("0.0000")</td>
                                    }
                        </tr>
                        <tr>
                            <td style="width: 140px">2nd frame</td>
                            @foreach(var item in Model.Dinuc.dinucleotides)
                                    {
                                        <td>@item.Dinuc2ndFrame</td>
                                    }
                        </tr>
                        <tr>
                            <td>2nd frame frq</td>
                            @foreach(var item in Model.Dinuc.dinucleotides)
                                    {
                                        <td>@item.Dinuc2ndFrameFrq.ToString("0.0000")</td>
                                    }
                        </tr>
                        <tr>
                            <td>Dinuc diff</td>
                            @foreach(var item in Model.Dinuc.dinucleotides)
                                    {
                                        <td>@Math.Abs(item.Dinuc1stFrame - item.Dinuc2ndFrame)</td>
                                    }
                        </tr>
                        <tr>
                            <td style="width: 140px">Dinuc frq diff</td>
                            @foreach(var item in Model.Dinuc.dinucleotides)
                                    {
                                        <td>@Math.Abs(item.Dinuc1stFrameFrq - item.Dinuc2ndFrameFrq).ToString("0.0000")</td>
                                    }
                        </tr>
                    </tbody>
                </table>
            </div>
            <br>
            <div class="row justify-content-center">
                <table>
                    <tbody>
                        <tr>
                            <td style="width: 160px"><b>Dinuc Frq Diff Sum</b></td>
                            <td>@Model.DinucFrqDiffSum.ToString("0.0000")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>

